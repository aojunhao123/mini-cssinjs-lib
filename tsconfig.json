{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"]
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}
